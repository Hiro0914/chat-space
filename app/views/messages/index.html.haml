-#.flash-box
  グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %h3.side-header__box__user-name 
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to do
              = fa_icon 'edit', class: 'icon'
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'
    .groups
      = render partial: 'group'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group current group
        %ul.main-header__left-box__member-list 
          Member：
          %li.main-header__left-box__member-list__member 
            name
      .main-header__edit-btn Edit
    .messages
      #message 
        .messages__upper-info
          .messages__upper-info__talker test-user
          %p.messages__upper-info__date 2019/7/26
        %p.messages-text hello
    .form
      %form
        %input.form__message{placeholder: 'type a message'}
        .form__mask
          %label.form__mask__image
            = fa_icon 'picture-o', class: 'icon'
            %input.hidden{type: 'file'}
        %input.form__submit{type: 'submit', value: 'Send'}


